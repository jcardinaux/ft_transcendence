{
  "name": "app",
  "version": "1.0.0",
  "main": "./src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"npm run watch-css\" \"npm run watch-ts\" \"nodemon src/server.js\"",
    "watch-css": "tailwindcss -i ./public/styles/input.css -o ./public/styles/output.css --watch",
    "watch-ts": "tsc --watch",
    "build-css": "tailwindcss -i ./public/styles/input.css -o ./public/styles/output.css --minify",
    "build-ts": "tsc",
    "build": "npm run build-css && npm run build-ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.1.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.10.0",
    "fastify": "^5.3.3",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "concurrently": "^9.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  }
}
